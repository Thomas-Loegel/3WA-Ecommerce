				<!--Affichage des pages en Ajax ici-->
			</div>

			<script>
				$(document).ready(function(){
					$(".account-option a").click(function(event){
						event.preventDefault();
						/* event.preventDefault(); ->Permet d'annuler le comportement du lien "href" pour ne garder que le clic par defaut */
						var target = $(this).data("target");
						var element = $(this).data("element");
						$("#ajax_profile_admin").load("index.php?page="+target+" "+element);
					});
				});
			</script>
